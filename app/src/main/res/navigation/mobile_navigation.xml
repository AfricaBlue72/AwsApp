<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.awsapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.awsapp.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_home_second_to_signinFragment3"
            app:destination="@id/nav_sign_in" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.awsapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.awsapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_sign_in"
        android:name="com.example.awsapp.ui.auth.SigninFragment"
        android:label="@string/auth_signin_fragment" >
        <action
            android:id="@+id/action_signinFragment_to_signupFragment"
            app:destination="@id/nav_sign_up" />
        <action
            android:id="@+id/action_nav_sign_in_to_forgotPasswordFragment"
            app:destination="@id/nav_forgot_password" />
    </fragment>
    <fragment
        android:id="@+id/nav_sign_up"
        android:name="com.example.awsapp.ui.auth.SignupFragment"
        android:label="@string/auth_signup_fragment" >
        <action
            android:id="@+id/action_nav_sign_up_to_confirmCodeFragment"
            app:destination="@id/nav_confirm_code"
            app:popUpTo="@id/nav_sign_in"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_confirm_code"
        android:name="com.example.awsapp.ui.auth.ConfirmCodeFragment"
        android:label="@string/auth_confirm_code_fragment" >
        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="codeType"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <action android:id="@+id/action_global_nav_sign_in" app:destination="@id/nav_sign_in" />
    <action android:id="@+id/action_global_nav_sign_up" app:destination="@id/nav_sign_up" />
    <action android:id="@+id/action_global_confirmCodeFragment" app:destination="@id/nav_confirm_code" />
    <fragment
        android:id="@+id/nav_sign_out"
        android:name="com.example.awsapp.ui.auth.SignoutFragment"
        android:label="@string/auth_signout_fragment" />
    <action android:id="@+id/action_global_nav_sign_out" app:destination="@id/nav_sign_out" />
    <fragment
        android:id="@+id/nav_forgot_password"
        android:name="com.example.awsapp.ui.auth.ForgotPasswordFragment"
        android:label="@string/auth_forgot_password" />
    <action android:id="@+id/action_global_forgotPasswordFragment" app:destination="@id/nav_forgot_password" />
</navigation>