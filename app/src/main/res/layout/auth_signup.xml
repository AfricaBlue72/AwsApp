<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="558dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/auth_username_hint"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLength="128"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_password_hint"
                android:inputType="textPassword"
                android:maxLength="128"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editEmail" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_email_hint"
                android:inputType="textEmailAddress"
                android:maxLength="128"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editUserName" />

            <EditText
                android:id="@+id/editRepeatPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_password_repeat_hint"
                android:inputType="textPassword"
                android:maxLength="128"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editPassword" />

            <EditText
                android:id="@+id/editTelephone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_tel_hint"
                android:inputType="phone"
                android:maxLength="15"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editRepeatPassword" />

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_first_name_hint"
                android:inputType="textPersonName"
                android:maxLength="128"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editTelephone" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_last_name_hint"
                android:inputType="textPersonName"
                android:maxLength="128"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editFirstName" />

            <EditText
                android:id="@+id/editAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/auth_age_hint"
                android:inputType="number"
                android:maxLength="3"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editLastName" />

            <Button
                android:id="@+id/buttonSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/auth_signup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editUserName"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/editUserName"
                app:layout_constraintTop_toBottomOf="@+id/editAge"
                app:layout_constraintVertical_bias="0.074" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:indeterminate="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
